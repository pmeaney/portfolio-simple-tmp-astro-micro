---
import Layout from "@layouts/Layout.astro";
import Container from "@components/Container.astro";
import { SITE, HOME, SOCIALS } from "@consts";
import ArrowCard from "@components/ArrowCard.astro";
import Link from "@components/Link.astro";
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";
import Callout from "@components/Callout.astro";

const blog = (await getCollection("blog"))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, SITE.NUM_POSTS_ON_HOMEPAGE);

const projects: CollectionEntry<"projects">[] = (
  await getCollection("projects")
)
  .filter((project) => !project.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, SITE.NUM_PROJECTS_ON_HOMEPAGE);

const oldProjects: CollectionEntry<"oldProjects">[] = (
  await getCollection("oldProjects")
)
  .filter((oldProject) => !oldProject.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, SITE.NUM_PROJECTS_ON_HOMEPAGE);
---

<Layout title={HOME.TITLE} description={HOME.DESCRIPTION}>
  <Container>
    <aside data-pagefind-ignore>
      <Callout type="info">
        Note: This site is new, and its content is still under development.
      </Callout>
      <h1 class="font-semibold text-black dark:text-white">
        Portfolio of Patrick Meaney
      </h1>

      <div class="space-y-16">
        <section>
          <div class="flex flex-col gap-8 lg:flex-row lg:gap-[10%]">
            <!-- Left: intro text (40%) -->
            <article class="w-full space-y-4 lg:w-[40%]">
              <span>
                <p>
                  Hi, I'm Patrick Meaney. I'm a Software Engineer, with a
                  background in: Web App Development, DevOps, Solutions-Engineer
                  Consulting, and Digital Marketing.
                </p>
                <p>
                  I'm currently based in San Antonio, TX and seeking a new full
                  time job in the San Antonio or Austin area, whether on-site,
                  hybrid, or fully remote.
                </p>
              </span>
              <span class="animate">
                <p>
                  I'm currently setting up an eCommerce website based on the
                  Typescript framework Vendure. After that, I'll start tinkering
                  with a LiDAR & electric motor project for a spatial scanning
                  project. My main career interests are Software Development,
                  Management, and Marketing.
                </p>
              </span>
            </article>

            <!-- Right: photo placeholder (40%) -->
            <div class="w-full lg:w-[40%]">
              <!-- max-w-xs: limits photo to ~320px on mobile/tablet for reasonable size
                  mx-auto: centers the constrained photo on smaller screens
                  lg:max-w-none: removes size limit on large screens, lets it fill the 40% column
                  Note: for Square photo, use aspect-square . for 4/3, use aspect-[4/3] -->
              <!-- for 4/3 aspect photo -->
              <!-- <div
                class="mx-auto flex aspect-[4/3] max-w-lg items-center justify-center rounded-lg bg-gray-200 lg:max-w-none dark:bg-gray-700"
              >
                <figure>
                  <img
                    src="/images-personal/patrick-moab.jpg"
                    alt="Patrick Meaney"
                    class="h-full w-full rounded-lg object-cover"
                  />
                  <figcaption
                    class="my-2 text-center text-sm text-gray-600 dark:text-gray-400"
                  >
                    Hiking in Moab, UT in 2025
                  </figcaption>
                </figure>
              </div>
               -->
              <!-- For Square photo -->
              <div
                class="mx-auto flex aspect-square max-w-lg items-center justify-center rounded-lg bg-gray-200 lg:max-w-none dark:bg-gray-700"
              >
                <figure>
                  <img
                    src="/images-personal/patrick-building.jpg"
                    alt="Patrick Meaney"
                    class="h-full w-full rounded-lg object-cover"
                  />
                </figure>
              </div>
            </div>
          </div>
        </section>

        <section class="animate space-y-4">
          <h2 class="font-semibold text-black dark:text-white">
            Professional Background
          </h2>
          <ul class="space-y-3 text-black/75 dark:text-white/75">
            <li>
              <strong class="text-black dark:text-white"
                >DevOps Engineer & Technical Project Manager</strong
              >
              <span class="mt-1 block">
                Led the largest CICD migration in company history at CDK Global,
                migrating 200+ repositories worth $35M+ in product IP from
                CircleCI to Github Actions. Managed cross-functional planning
                with 30+ engineers and architects, completing the project one
                month ahead of schedule. Built and improved CICD pipelines,
                learned the basics of Kubernetes infrastructure management, and
                refactored Terraform scripts for AWS deployments.
              </span>
            </li>
            <li>
              <strong class="text-black dark:text-white"
                >Full Stack Developer</strong
              >
              <span class="mt-1 block">
                Developed full-stack applications using NodeJS, ReactJS,
                TypeScript, and PostgreSQL. Built microservices, RESTful APIs,
                and containerized applications with Docker. Experience spans
                e-commerce platforms, authentication services, workforce
                management systems, and various client projects across multiple
                industries.
              </span>
            </li>
            <li>
              <strong class="text-black dark:text-white"
                >CRM Solutions Engineer</strong
              >
              <span class="mt-1 block">
                Designed and built MarTech integrations at Etumos for Fortune
                500 clients including Amazon Alexa. Developed Marketo
                API-integrated applications using ReactJS, NodeJS, and AWS
                (Lambda, DynamoDB). Created scope of work documents and
                technical architecture diagrams that resulted in approved
                enterprise contracts.
              </span>
            </li>
            <li>
              <strong class="text-black dark:text-white"
                >CRM Business Analyst</strong
              >
              <span class="mt-1 block">
                Specialized in marketing automation and CRM systems at Pulse
                Secure and SolarWinds. Built NodeJS integrations between
                LiveChat and Marketo, developed hundreds of event-triggered
                email campaigns, and created interdepartmental reporting
                dashboards. Trained marketing teams on CRM best practices and
                workflow optimization.
              </span>
            </li>
          </ul>
        </section>

        <section class="animate space-y-6">
          <div class="flex flex-wrap items-center justify-between gap-y-2">
            <h2 class="font-semibold text-black dark:text-white">
              Latest posts
            </h2>
            <Link href="/blog"> See all posts </Link>
          </div>
          <ul class="not-prose flex flex-col gap-4">
            {
              blog.map((post) => (
                <li>
                  <ArrowCard entry={post} />
                </li>
              ))
            }
          </ul>
        </section>

        <section class="animate space-y-6">
          <div class="flex flex-wrap items-center justify-between gap-y-2">
            <h2 class="font-semibold text-black dark:text-white">
              Recent projects
            </h2>
            <Link href="/projects"> See all projects </Link>
          </div>
          <ul class="not-prose flex flex-col gap-4">
            {
              projects.map((project) => (
                <li>
                  <ArrowCard entry={project} />
                </li>
              ))
            }
          </ul>
        </section>

        <section class="animate space-y-6">
          <div class="flex flex-wrap items-center justify-between gap-y-2">
            <h2 class="font-semibold text-black dark:text-white">
              Older Projects from my earlier days in Software Development
            </h2>
            <Link href="/projects"> See all Older Projects </Link>
          </div>
          <ul class="not-prose flex flex-col gap-4">
            {
              oldProjects.map((oldProject) => (
                <li>
                  <ArrowCard entry={oldProject} />
                </li>
              ))
            }
          </ul>
        </section>

        <section class="animate space-y-4">
          <h2 class="font-semibold text-black dark:text-white">
            Let's Connect
          </h2>
          <article>
            <p>
              If you want to get in touch with me about something or just to say
              hi, reach out on social media or send me an email.
            </p>
          </article>
          <ul class="not-prose flex flex-wrap gap-2">
            {
              SOCIALS.map((SOCIAL) => (
                <li class="flex gap-x-2 text-nowrap">
                  <Link
                    href={SOCIAL.HREF}
                    external
                    aria-label={`${SITE.TITLE} on ${SOCIAL.NAME}`}
                  >
                    {SOCIAL.NAME}
                  </Link>
                  {"/"}
                </li>
              ))
            }
            <li class="line-clamp-1">
              <Link
                href={`mailto:${SITE.EMAIL}`}
                aria-label={`Email ${SITE.TITLE}`}
              >
                {SITE.EMAIL}
              </Link>
            </li>
          </ul>
        </section>
      </div>
    </aside>
  </Container>
</Layout>
